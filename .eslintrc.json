{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "eslint-config-next"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-unused-vars": 0,
    "@next/next/no-img-element": 0, // TODO: Migrate <img> to <Image>
    "react/no-unescaped-entities": 0,
    "import/no-anonymous-default-export": 0,
    "react/no-deprecated": 0 // TODO: Migrate ScriptTag component to next/script
  }
}
